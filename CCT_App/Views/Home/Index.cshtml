<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>CCT Train</title>

		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

		<script src="api-calls.js"></script>

		<link rel="stylesheet" href="css/custom.css">
	</head>
	<body>
		<div class="container">
			<!-- Login -->
			<div class="row">
				<div class="col-sm-7">
					<h1>Co-Curricular Transcript</h1>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="username" placeholder="username">
				</div>
				<div class="col-sm-2">
					<button type="button" class="form-control btn btn-blue" id="loginButton"
						onclick="login(document.getElementById('username').value)">
							Login
					</button>
				</div>
				<p id="name"></p>
			</div>

			<!-- NavBar -->
			<div class="row">
				<nav class="navbar navbar-blue" role="navigation">
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav">
							<li>
								<a class="navbar-link" href="#activities">Activities</a>
							</li>
							<li>
								<a class="navbar-link" href="#memberships">Memberships</a>
							</li>
							<li>
								<a class="navbar-link" href="#roles">Roles</a>
							</li>
							<li>
								<a class="navbar-link" href="#students">Students</a>
							</li>
							<li>
								<a class="navbar-link" href="#sessions">Sessions</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>

			<!-- Activities -->
			<h3 id="activities">Activities</h3>
			<!-- All Activities -->
			<!-- Get -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getActivities()">
							Get All Activities
					</button>
				</div>
			</div>

			<!-- Single Activity -->
			<!-- Get -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getActivity(document.getElementById('activityGetId').value)">
							Get Activity
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="activityGetId" placeholder="Activity ID">
				</div>
			</div>

			<!-- Memberships -->
			<h3 id="memberships">Memberships</h3>
			<!-- All Memberships -->
			<!-- Get -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getMemberships()">
							Get All Memberships
					</button>
				</div>
			</div>

			<!-- Single Membership -->
			<!-- Get -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getMembership(document.getElementById('membershipGetId').value)">
							Get Membership
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipGetId" placeholder="Membership ID">
				</div>
			</div>
			<!-- Delete -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="deleteMembership(document.getElementById('membershipDeleteId').value)">
							Delete Membership
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipDeleteId" placeholder="Membership ID">
				</div>
			</div>
			<!-- Post -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="postMembership(
							document.getElementById('membershipPostActivityCode').value,
							document.getElementById('membershipPostSessionCode').value,
							document.getElementById('membershipPostLevel').value,
							document.getElementById('membershipPostStudentId').value,
							document.getElementById('membershipPostComments').value,
							document.getElementById('membershipPostBeginDate').value,
							document.getElementById('membershipPostEndDate').value
						)">
							Post Membership
					</button>
				</div>
				<div class="col-sm-3">
					<select class="form-control" id="membershipPostSessionCode"
						onclick="populateActivities(document.getElementById('membershipPostSessionCode').value)">
						<option>Session</option>
				    </select>
				</div>
				<div class="col-sm-3">
					<select class="form-control" id="membershipPostActivityCode">
					    <option>Activity</option>
				    </select>
				</div>
				<div class="col-sm-3">
					<select class="form-control" id="membershipPostLevel">
						<option>Membership Level</option>
				    </select>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-3 invisible"></div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipPostStudentId" placeholder="Student ID">
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipPostComments" placeholder="Comments (optional)">
				</div>
			</div>
			<div class="row">
				<div class="col-sm-3 invisible"></div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipPostBeginDate" placeholder="Begin Date">
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipPostEndDate" placeholder="End Date">
				</div>
			</div>

			<!-- Roles -->
			<h3 id="roles">Roles</h3>
			<!-- Get All Roles -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue" onclick="getRoles()">Get All Roles</button>
				</div>
			</div>
			<!-- Get Single Role -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getRole(document.getElementById('roleGetId').value)">
							Get Role
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="roleGetId" placeholder="Role ID">
				</div>
			</div>

			<!-- Students -->
			<h3 id="students">Students</h3>
			<!-- Get All Students -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue" onclick="getStudents()">Get All Student</button>
				</div>
			</div>
			<!-- Get Single Student -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getStudent(document.getElementById('studentGetId').value)">
							Get Student
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="studentGetId" placeholder="Student ID">
				</div>
			</div>
			<!-- Get Memberships By Student -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getMembershipsByStudent(document.getElementById('membershipsByStudentGetId').value)">
							Memberships By Student
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="membershipsByStudentGetId" placeholder="Student ID">
				</div>
			</div>

			<!-- Session -->
			<h3 id="sessions">Sessions</h3>
			<!-- Get All Sessions -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue" onclick="getSessions()">Get All Session</button>
				</div>
			</div>
			<!-- Get Activities In Session -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getActivitiesInSession(document.getElementById('activitiesInSessionGetId').value)">
							Activities In Session
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="activitiesInSessionGetId" placeholder="Session ID">
				</div>
			</div>
			<!-- Get Single Session -->
			<div class="row">
				<div class="col-sm-3">
					<button type="button" class="form-control btn btn-blue"
						onclick="getSession(document.getElementById('sessionGetId').value)">
							Get Session
					</button>
				</div>
				<div class="col-sm-3">
					<input type="text" class="form-control" id="sessionGetId" placeholder="Session ID">
				</div>
			</div>

			<!-- Table -->
			<div class="col-sm-12">
				<table id="table" class="table table-condensed">
					<thead id="tableHead"></thead>
					<tbody id="tableBody"></tbody>
				</table>
			</div>
		</div>
	</body>
</html>
